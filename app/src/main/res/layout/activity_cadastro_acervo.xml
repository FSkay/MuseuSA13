<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".CadastroAcervo">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="16dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <EditText
                android:id="@+id/etIdArt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:hint="NÂº Registro MOM-"
                android:inputType="textPersonName" />

            <EditText
                android:id="@+id/etNomeAr"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:hint="Nome:"
                android:inputType="textPersonName" />

            <EditText
                android:id="@+id/doadoPo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:hint="Doado por:"
                android:inputType="textPersonName" />

            <ImageView
                android:id="@+id/imgObj"
                android:layout_width="match_parent"
                android:layout_height="244dp"
                app:srcCompat="@mipmap/ic_launcher" />

            <Button
                android:id="@+id/btSalvar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:onClick="adicionar"
                android:text="Cadastrar" />

            <Button
                android:id="@+id/btapagarTudo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:onClick="apagarTudo"
                android:text="Apagar" />

        </LinearLayout>
    </LinearLayout>
</android.support.constraint.ConstraintLayout>